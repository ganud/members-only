<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../style.css" type="text/css" />
    <title>Document</title>
  </head>
  <body>
    <div class="header">
      <a href="/"><strong>Members Only</strong></a>
      <div class="login-buttons">
        <a href="/login"><strong>Log In</strong></a>
        <a href="/sign-up"><strong>Sign Up</strong></a>
      </div>
    </div>
    <hr />
    <form action="/new-message" method="post">
      <% if (user) {%>
      <h1>New Message</h1>
      <% if (errors !== false) { %> <% errors.map((error) => { %>
      <li><%= error.msg %></li>
      <% }) %> <% } %>
      <div class="input-field">
        <label for="message_title">Title</label>
        <input type="text" id="message_title" name="message_title" />
      </div>
      <div class="input-field">
        <label for="message">Content</label>
        <textarea name="message" id="message"></textarea>
      </div>
      <button type="submit" class="account-button">
        <strong>Post</strong>
      </button>
      <% } else { %> You need to be logged in to post <%}%>
    </form>
  </body>
</html>
